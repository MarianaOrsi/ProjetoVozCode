@page "/login"

@using Microsoft.AspNetCore.Components.Forms

<div class="login-container">
    <div class="login-form">
        <img src="assets/blind-person-icon.svg" alt="Ícone de pessoa com bengala" class="logo-icon" />

        <EditForm Model="@login" OnValidSubmit="HandleLogin">
            <div class="input-group">
                <span class="input-icon">👤</span>
                <InputText @bind-Value="login.Username" placeholder="Usuário ou Email" class="form-input" />
                <span class="mic-icon">🎤</span>
            </div>
            <div class="input-group">
                <span class="input-icon">🔒</span>
                <InputText type="password" @bind-Value="loginModel.Password" placeholder="Senha" class="form-input" />
            </div>
            <button type="submit" class="login-button">LOGIN</button>
        </EditForm>

        <a href="/forgot-password" class="forgot-password">Esqueci minha senha</a>

        <button class="register-button" @onclick="NavigateToRegister">CADASTRAR</button>

        <div class="social-icons">
            <a href="https://instagram.com"><img src="assets/instagram-icon.svg" alt="Instagram" /></a>
            <a href="https://facebook.com"><img src="assets/facebook-icon.svg" alt="Facebook" /></a>
            <a href="https://x.com"><img src="assets/twitter-icon.svg" alt="Twitter" /></a>
        </div>
    </div>
</div>

<style>
    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-image: url('assets/background-keyboard.jpg');
        background-size: cover;
        background-position: center;
        background-blur: 10px; /* Para simular o blur, use filter: blur(10px) no background, mas requer div separado */
        position: relative;
    }

    .login-container::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 50, 0.7); /* Overlay azul escuro semi-transparente */
        filter: blur(5px);
    }

    .login-form {
        background: rgba(255, 255, 255, 0.1);
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        text-align: center;
        position: relative;
        z-index: 1;
        width: 300px;
    }

    .logo-icon {
        width: 80px;
        margin-bottom: 20px;
    }

    .input-group {
        position: relative;
        margin-bottom: 20px;
    }

    .form-input {
        width: 100%;
        padding: 10px 40px;
        border: 1px solid #ccc;
        border-radius: 20px;
        background: transparent;
        color: white;
    }

    .input-icon {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        font-size: 18px;
    }

    .mic-icon {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        font-size: 18px;
    }

    .login-button {
        background: #0000ff;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 20px;
        width: 100%;
        margin-bottom: 10px;
        cursor: pointer;
    }

    .forgot-password {
        display: block;
        margin-bottom: 20px;
        color: white;
        text-decoration: underline;
        font-size: 14px;
    }

    .register-button {
        background: #6666ff;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 20px;
        width: 100%;
        cursor: pointer;
    }

    .social-icons {
        margin-top: 20px;
        display: flex;
        justify-content: center;
        gap: 20px;
    }

    .social-icons img {
        width: 30px;
    }
</style>


