@{
    ViewData["Title"] = "Editor";
    Layout = null;
}

<div class="editor-container">

    <!-- SIDEBAR ESQUERDA -->
    <div class="sidebar">
        <i class="fas fa-arrow-left back-arrow"></i>

        <h3 class="sidebar-title">Feedback</h3>

        <div class="sidebar-messages">
            <!-- Aqui você coloca mensagens, erros etc -->
            <p>O resultado da IA aparece aqui...</p>
        </div>

        <i class="fas fa-owl owl-icon"></i>
    </div>


    <!-- ÁREA PRINCIPAL (EDITOR) -->
    <div class="main">

        <div class="top-bar">
            <span>Editor de Código</span>
            <i class="fas fa-cog settings-gear"></i>
        </div>

        <form asp-action="Execusao" asp-controller="Execusao" class="code-area">

            <!-- NUMERAÇÃO + TEXTO -->
            <div class="editor-wrapper" style="height: 90vh;">

                <div class="line-numbers" id="lineNumbers"></div>

                <textarea id="codeInput"
                          name="codigo"
                          class="editor-input"
                          placeholder="Digite seu código aqui..."></textarea>

            </div>

            <!-- BARRA INFERIOR -->
            <div class="bottom-bar">
                <div class="error-speech">
                    <i class="fas fa-code csharp-icon"></i>
                    <span class="error-text">vozCode...</span>
                </div>

                <i class="fas fa-microphone microphone"></i>
            </div>

        </form>

    </div>

</div>



<style>
    /* ======== RESET ========= */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    html, body {
        height: 100%;
        background: #0d1b2a;
        font-family: Consolas, monospace;
        overflow: hidden; /* OK: apenas o textarea rola */
        color: #e0e1dd;
    }

    /* ======== CONTAINER GERAL ========= */
    .editor-container {
        display: flex;
        height: 100vh;
        width: 100vw;
    }

    /* ======== SIDEBAR ========= */
    .sidebar {
        width: 30%;
        background: #1b263b;
        padding: 30px 25px;
        display: flex;
        flex-direction: column;
        border-top-left-radius: 40px;
        border-bottom-left-radius: 40px;
    }

    .back-arrow {
        font-size: 26px;
        color: #00ff9d;
        cursor: pointer;
    }

    .sidebar-title {
        margin-top: 20px;
        margin-bottom: 10px;
        color: #88a1c4;
    }

    .sidebar-messages {
        flex: 1;
        margin-top: 15px;
        overflow-y: auto;
        padding-right: 10px;
        font-size: 15px;
    }

    .owl-icon {
        font-size: 42px;
        color: #415a77;
        margin-top: auto;
        align-self: center;
    }

    /* ======== ÁREA PRINCIPAL ========= */
    .main {
        flex: 1;
        background: #0b121e;
        display: flex;
        flex-direction: column;
        position: relative;
    }

    .top-bar {
        height: 55px;
        background: #16213e;
        border-bottom: 1px solid #33415c;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 25px;
        font-size: 18px;
    }

    .settings-gear {
        font-size: 24px;
        color: #778da9;
    }

    /* ======== EDITOR ========= */
    .code-area {
        flex: 1;
        position: relative;
    }

    .editor-wrapper {
        display: flex;
        height: calc(100% - 110px); /* remove topbar + bottom bar */
    }

    .line-numbers {
        width: 60px;
        padding: 20px 10px;
        background: #0d1625;
        border-right: 1px solid #1e2d4d;
        text-align: right;
        font-size: 15px;
        line-height: 1.6;
        color: #415a77;
        user-select: none;
        overflow-y: hidden;
    }

    .editor-input {
        flex: 1;
        padding: 20px;
        background: #0b121e;
        color: #e0e1dd;
        font-size: 17px;
        border: none;
        outline: none;
        resize: none;
        line-height: 1.6;
        overflow-y: auto;
    }

    /* ======== BARRA INFERIOR ========= */
    .bottom-bar {
        position: absolute;
        bottom: 20px;
        left: 50%;
        transform: translateX(-50%);
        padding: 12px 30px;
        background: #1b263b;
        border-radius: 30px;
        display: flex;
        align-items: center;
        gap: 15px;
        box-shadow: 0 6px 25px rgba(0, 0, 0, 0.5);
        min-width: 320px;
    }

    .csharp-icon {
        color: #00c8ff;
        font-size: 20px;
    }

    .error-text {
        font-size: 15px;
        font-weight: bold;
    }

    .microphone {
        font-size: 26px;
        color: #778da9;
    }
</style>



<script>
/* ==== NUMERAÇÃO DE LINHAS AUTOMÁTICA ==== */

function updateLineNumbers() {
    const textarea = document.getElementById("codeInput");
    const lines = textarea.value.split("\n").length;

    let html = "";
    for (let i = 1; i <= lines; i++) html += i + "<br>";

    document.getElementById("lineNumbers").innerHTML = html;
}

document.getElementById("codeInput").addEventListener("input", updateLineNumbers);

// inicial
updateLineNumbers();
</script>
